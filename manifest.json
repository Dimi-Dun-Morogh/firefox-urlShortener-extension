{

  "manifest_version": 2,
  "name": "UrlShortener",
  "version": "1.0",

  "description": "Basic addon to shorten URLS. It will store 5 last shorted URLs in local storage",
  "icons": {
    "48": "icons/short-48.jpg",
    "96": "icons/short-48.jpg"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/short-48.jpg",
    "default_title": "UrlShortener",
    "default_popup": "popup/main.html"
  }
}