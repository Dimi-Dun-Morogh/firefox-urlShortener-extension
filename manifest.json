{

  "manifest_version": 2,
  "name": "Url shortener",
  "version": "1.0.1",

  "description": "Basic addon to shorten URLS. It will store 5 last shorted URLs in local storage",
  "icons": {
    "16": "icons/short-16.png",
    "32": "icons/short-32.png",
    "48": "icons/short-48.png",
    "128": "icons/short-128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/short-16.png",
      "32": "icons/short-32.png",
      "48": "icons/short-48.png",
      "128": "icons/short-128.png"
    },
    "default_title": "UrlShortener",
    "default_popup": "popup/main.html"
  }
}